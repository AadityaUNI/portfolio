---
import { Icon } from "astro-icon/components";
import { PERSONAL_INFO } from "../../data/personal";

interface Props {
    class?: string;
    links?: Array<{ href: string; label: string }>;
}

const { class: className, links = PERSONAL_INFO.socialLinks } = Astro.props;

const getHref = (label: string) =>
    links.find((l) => l.label.toLowerCase() === label.toLowerCase())?.href ?? "#";

const linkedinHref = getHref("LinkedIn");
const githubHref = getHref("GitHub");
const emailHref = getHref("Email");
---

<div class:list={["flex items-center gap-6 mb-6", className]}>
    <a
        href={linkedinHref}
        target="_blank"
        rel="noopener noreferrer"
        class="text-primary hover:text-purple-400 transition-all duration-300 hover:scale-110"
        aria-label="LinkedIn"
    >
        <Icon name="lucide:linkedin" class="size-6 md:size-8" />
    </a>

    <a
        href={githubHref}
        target="_blank"
        rel="noopener noreferrer"
        class="text-primary hover:text-purple-400 transition-all duration-300 hover:scale-110"
        aria-label="GitHub"
    >
        <Icon name="lucide:github" class="size-6 md:size-8" />
    </a>

    <a
        href={emailHref}
        class="text-primary hover:text-purple-400 transition-all duration-300 hover:scale-110"
        aria-label="Email"
    >
        <Icon name="lucide:mail" class="size-6 md:size-8" />
    </a>
</div>

<style>
    .text-primary {
        color: #7836cf;
    }
</style>
